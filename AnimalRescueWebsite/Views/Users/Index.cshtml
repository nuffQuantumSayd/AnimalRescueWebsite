@model IEnumerable<AnimalRescueWebsite.Models.Dog>

@{
    ViewData["Title"] = "Index";
}

<h1>Available Dogs!</h1>


<div class="container text-center">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <img src="https://placehold.co/280x180" class="card-img-top" alt="placeholder image">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.DogName)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.DogDescription)</p>
                    <a href="@Url.Action("Create", "DogApplications", new {id = item.DogId})" class="btn btn-primary">Adopt Me!</a>
                </div>
            </div>
        }
    </div>
</div>



