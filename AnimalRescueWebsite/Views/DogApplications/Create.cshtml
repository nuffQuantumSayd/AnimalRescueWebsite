@model AnimalRescueWebsite.Models.Applicant

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Applicant</h4>
<hr />

<div class="container-sm" style="background-color:#eaeaea">
    <div class="row justify-content-center my-5">
        <div class="col-lg-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ApplicantFirstName" class="control-label"></label>
                    <input asp-for="ApplicantFirstName" class="form-control" />
                    <span asp-validation-for="ApplicantFirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicantLastName" class="control-label"></label>
                    <input asp-for="ApplicantLastName" class="form-control" />
                    <span asp-validation-for="ApplicantLastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateOfApplication" class="control-label"></label>
                    <input id="date-input" asp-for="DateOfApplication" class="form-control" type="text" />
                    <span asp-validation-for="DateOfApplication" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddressStreet" class="control-label"></label>
                    <input asp-for="AddressStreet" class="form-control" />
                    <span asp-validation-for="AddressStreet" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddressCity" class="control-label"></label>
                    <input asp-for="AddressCity" class="form-control" />
                    <span asp-validation-for="AddressCity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddressState" class="control-label"></label>
                    <input asp-for="AddressState" class="form-control" />
                    <span asp-validation-for="AddressState" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AddressZip" class="control-label"></label>
                    <input asp-for="AddressZip" class="form-control" />
                    <span asp-validation-for="AddressZip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicantEmail" class="control-label"></label>
                    <input asp-for="ApplicantEmail" class="form-control" />
                    <span asp-validation-for="ApplicantEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicantPhone" class="control-label"></label>
                    <input asp-for="ApplicantPhone" class="form-control" />
                    <span asp-validation-for="ApplicantPhone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ApplicantOccupation" class="control-label"></label>
                    <input asp-for="ApplicantOccupation" class="form-control" />
                    <span asp-validation-for="ApplicantOccupation" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="NumberOfChildren" class="control-label"></label>
                    <input asp-for="NumberOfChildren" class="form-control" />
                    <span asp-validation-for="NumberOfChildren" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
